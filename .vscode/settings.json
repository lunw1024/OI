{
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.ignoreSelection": true,
    "code-runner.executorMap": {
        // fast
        "cpp": "cd $dir && g++ $fileName -o run -std=c++20 -I $workspaceRoot/lib/ -O2 -Wall -Wextra -Wshadow -Wfloat-equal -Wconversion -Wlogical-op -Wshift-overflow=2 -Wduplicated-cond -Wno-sign-compare && ./run ; rm run",
        // slow, use when WA
        // "cpp": "cd $dir && g++ $fileName -o run -std=c++20 -I $workspaceRoot/lib/ -O2 -Wall -Wextra -Wshadow -Wfloat-equal -Wconversion -Wlogical-op -Wshift-overflow=2 -Wduplicated-cond -Wno-sign-compare -D_GLIBCXX_DEBUG -fsanitize=address -fsanitize=undefined && ./run ; rm run",
        "python": "python -u",
    },
    "python.languageServer": "Pylance",
    "code-runner.enableAppInsights": false,
    "code-runner.preserveFocus": false,
    "code-runner.customCommand": "cd $workspaceRoot && ./lib/expander.py $fullFileName --lib ./lib",
    "files.watcherExclude": {
        "**/.venv/**": true
    },
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/lib"
    ],
    "files.associations": {
        "array": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "string_view": "cpp",
        "initializer_list": "cpp",
        "ranges": "cpp",
        "span": "cpp",
        "regex": "cpp",
        "valarray": "cpp"
    },
}
