{
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.ignoreSelection": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ $fileName -o $workspaceRoot/run -std=c++17 -I $workspaceRoot/lib/ && $workspaceRoot/run",
        "python": "python -u",
    },
    "python.languageServer": "Pylance",
    "code-runner.enableAppInsights": false,
    "code-runner.preserveFocus": false,
    "code-runner.customCommand": "cd $workspaceRoot && ./expander.py $fullFileName --lib ./lib",
    "files.associations": {
        "iomanip": "cpp",
        "ostream": "cpp",
        "vector": "cpp",
        "bit": "cpp",
        "cmath": "cpp",
        "iostream": "cpp",
        "*.tcc": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "string": "cpp",
        "valarray": "cpp",
        "all": "cpp",
        "algorithm": "cpp",
        "cassert": "cpp",
        "random": "cpp"
    },
    "files.watcherExclude": {
        "**/.venv/**": true
    },
}